<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.dao.RestaurantDao">
    <select id="selectAll" resultType="main.pojo.Restaurant">
        select * 
        from restaurant;
    </select>
    <select id="selectByName" parameterType="String" resultType="main.pojo.Restaurant">
        select * 
        from restaurant
        where restaurant_name = #{param};
    </select>
    <select id="getRestaurantsByKeyword" parameterType="String" resultType="main.pojo.Restaurant">
        SELECT * 
        FROM restaurant
        WHERE restaurant_name LIKE CONCAT('%',#{param},'%');
    </select>    
</mapper>